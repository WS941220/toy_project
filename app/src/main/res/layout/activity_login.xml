<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkwhite"
    tools:context=".ui.login.LoginActivity">

    <Button
        android:id="@+id/main_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="둘러보기"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@+id/kakao_Btn"
        app:layout_constraintEnd_toEndOf="@+id/kakao_Btn"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_Btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:buttonSize="wide"
        app:layout_constraintStart_toStartOf="@+id/kakao_Btn"
        app:layout_constraintEnd_toEndOf="@+id/kakao_Btn"
        app:layout_constraintTop_toBottomOf="@+id/main_btn" />

    <ImageView
        android:id="@+id/kakao_Btn"
        android:src="@drawable/kakao_login_medium_wide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/google_Btn" />

    <Button
        android:id="@+id/apitest_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="유기동물 API 서비스 연동 (TEST)"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@+id/kakao_Btn"
        app:layout_constraintEnd_toEndOf="@+id/kakao_Btn"
        app:layout_constraintTop_toBottomOf="@+id/kakao_Btn"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
